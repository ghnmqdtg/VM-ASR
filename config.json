{
    "name": "MambaASR",
    "n_gpu": 1,
    "arch": {
        "type": "MambaUNet",
        "args": {}
    },
    "flac2wav": {
        "source_sr": 48000,
        "dest_path": "VCTK-Corpus-0.92/wav48_silence_trimmed_wav",
        "timestamps": "vctk-silence-labels/vctk-silences.0.92.txt"
    },
    "data_loader": {
        "type": "VCTKDataLoader",
        "args": {
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "random_resample": [
                8000,
                12000,
                16000,
                24000
            ],
            "length": 32768
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy",
        "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}