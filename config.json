{
    "name": "MambaASR",
    "n_gpu": 1,
    "arch": {
        "type": "DualStreamInteractiveUNet",
        "args": {}
    },
    "flac2wav": {
        "source_sr": 48000,
        "dest_path": "VCTK-Corpus-0.92/wav48_silence_trimmed_wav",
        "timestamps": "vctk-silence-labels/vctk-silences.0.92.txt"
    },
    "source_sr": 48000,
    "data_loader": {
        "type": "VCTKDataLoader",
        "args": {
            "data_dir": "data/",
            "batch_size": 24,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 6,
            "random_resample": [
                8000,
                12000,
                16000,
                24000
            ],
            "length": 121890,
            "white_noise": 1e-06,
            "chunking_params": {
                "chunk_size": 10160,
                "overlap": 0
            },
            "stft_params": {
                "chunks": {
                    "n_fft": 1022,
                    "hop_length": 80,
                    "win_length": 320
                },
                "full": {
                    "n_fft": 1022,
                    "hop_length": 478,
                    "win_length": 956
                }
            }
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": [
        "mse_loss"
    ],
    "metrics": [
        "log_spectral_distance",
        "psnr"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 25,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 50,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_total_loss",
        "early_stop": 10,
        "tensorboard": true,
        "sync_wandb": false
    }
}