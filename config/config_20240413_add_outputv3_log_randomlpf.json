{
    "name": "MambaASR",
    "n_gpu": 1,
    "arch": {
        "type": "DualStreamInteractiveMambaUNet",
        "args": {
            "in_chans": 1,
            "depths": [
                2,
                2,
                2,
                2
            ],
            "dims": [
                8,
                16,
                32,
                64,
                128
            ],
            "ssm_d_state": 1,
            "forward_type": "v5",
            "patchembed_version": "v2",
            "downsample_version": "v1",
            "upsample_version": "v1",
            "output_version": "v3",
            "concat_skip": false
        }
    },
    "flac2wav": {
        "source_sr": 48000,
        "dest_path": "VCTK-Corpus-0.92/wav48_silence_trimmed_wav",
        "timestamps": "vctk-silence-labels/vctk-silences.0.92.txt"
    },
    "source_sr": 48000,
    "data_loader": {
        "type": "VCTKDataLoader",
        "args": {
            "data_dir": "data/",
            "batch_size": 72,
            "shuffle": true,
            "num_workers": 2,
            "quantity": 0.1,
            "training_test_split": [
                100,
                8
            ],
            "validation_split": 0.2,
            "random_resample": [
                16000
            ],
            "length": 121890,
            "white_noise": 1e-32,
            "stft_enabled": true,
            "chunking_enabled": true,
            "chunking_params": {
                "chunk_size": 10160,
                "overlap": 0,
                "chunk_buffer": 240
            },
            "stft_params": {
                "chunks": {
                    "n_fft": 1022,
                    "hop_length": 80,
                    "win_length": 320
                },
                "full": {
                    "n_fft": 2048,
                    "hop_length": 512,
                    "win_length": 2048
                }
            },
            "random_lpf": true,
            "scale": "log"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": [
        "mae_loss",
        "generator_loss",
        "discriminator_loss",
        "feature_loss"
    ],
    "metrics": [
        "log_spectral_distance",
        "psnr"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingWarmupRestarts",
        "args": {
            "first_cycle_steps": 50,
            "cycle_mult": 1.0,
            "max_lr": 1e-3,
            "min_lr": 1e-5,
            "warmup_steps": 10,
            "gamma": 1.0
        }
    },
    "trainer": {
        "version": "v2",
        "update_mode": "v2",
        "epochs": 50,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_total_loss",
        "early_stop": 5,
        "amp": true,
        "gan": false,
        "tensorboard": true,
        "sync_wandb": true
    }
}